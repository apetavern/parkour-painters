@namespace ParkoutPainters.UI

<root>
    <div class="canvas" @ref=Canvas />
    <TextEntry @ref=Input onsubmit=@Submit onblur=@Close />
</root>

<style>
    TextChat {
        position: absolute;
        bottom: 200px;
        left: 200px;
        flex-direction: column;
        width: 505px;
        max-height: 230px;
        font-size: 16px;
        pointer-events: none;
        transition: all 0.1s ease, border 0s ease;

        textentry {
            transition: opacity 0.1s ease;
            flex-shrink: 0;
            opacity: 0;
            border-radius: 4px;
        }

        .content-label {
            margin-left: 16px;
        }

        .placeholder,
        .content-label {
            font-size: 35px;
            font-family: Poppins;
            color: rgb(207, 207, 207);
            margin: 5px;
        }

        .canvas {
            flex-direction: column;
            align-items: flex-start;
            overflow: scroll;
        }

        &.open {
            pointer-events: all;
            border-radius: 4 4 0 0;

            textentry {
                opacity: 0.9;
                width: 100%;
                cursor: text;
            }

            .canvas {
                TextChatEntry {
                    transition: opacity 0.1s ease;
                    opacity: 0.9;
                }
            }
        }
    }
</style>