@namespace ParkourPainters.UI

<root>
    @if (SteamId > 0)
    {
        <img src="avatar:@SteamId" />
    }
    <label class="name" text=@Name style="font-color: @Color.Hex;" />
    <label class="msg" text=@Message />
</root>

@code
{
    public string Name { get; set; }
    public Color Color { get; set; }
    public string Message { get; set; }
    public long SteamId { get; set; }
    public TimeSince Lifetime { get; init; } = 0;
}

<style>
    TextChatEntry {
        max-width: 100%;
        transition: opacity 0.15s ease;
        margin-bottom: 6px;
        flex-shrink: 0;

        img {
            height: 45px;
            width: 45px;
            margin-right: 5px;
            flex-shrink: 0;
        }

        .name {
            margin-right: 8px;
            flex-shrink: 0;
            font-size: 35px;
            font-family: Poppins;
            max-width: 225px;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .msg {
            font-size: 35px;
            font-family: Poppins;
            color: rgb(207, 207, 207);
        }

        &.stale {
            transition: opacity 1s ease;
            opacity: 0;
        }
    }
</style>