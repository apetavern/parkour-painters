@namespace ParkourPainters.UI

<root>
    @if (SteamId > 0)
    {
        <img src="avatar:@SteamId" />
    }
    <label class="name" text=@Name style="font-color: @NameColor.Hex;" />
    <label class="msg" text=@Message style="font-color: @MessageColor.Hex" />
</root>

@code
{
    public string Name { get; set; } = "";
    public Color NameColor { get; set; } = Color.White;
    public string Message { get; set; } = "";
    public Color MessageColor { get; set; } = Color.White.Darken(0.2f);
    public long SteamId { get; set; }
    public TimeSince Lifetime { get; init; } = 0;
}

<style>
    TextChatEntry {
        max-width: 100%;
        transition: opacity 0.15s ease;
        margin-bottom: 6px;
        flex-shrink: 0;

        img {
            height: 30px;
            width: 30px;
            margin-right: 5px;
            margin-top: 5px;
            flex-shrink: 0;
        }

        .name {
            margin-right: 8px;
            flex-shrink: 0;
            font-size: 35px;
            font-family: "AzeretMono-Medium";
            max-width: 225px;
            text-overflow: ellipsis;
            white-space: nowrap;
            height: 60px;
        }

        .msg {
            font-size: 38px;
            font-family: "AzeretMono-Medium";
            color: rgb(207, 207, 207);
        }

        &.stale {
            transition: opacity 1s ease;
            opacity: 0;
        }
    }
</style>