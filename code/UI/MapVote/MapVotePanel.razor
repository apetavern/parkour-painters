@namespace SpeedPainters.UI

@if (MapVoteState.Instance is null)
{
    return;
}

<root>
    <div class="maps">
        @foreach (var mapIdent in MapVoteState.Instance.MapIdents)
        {
            <MapIcon Ident=@mapIdent />
        }
    </div>
</root>

@code {
    protected override int BuildHash()
    {
        return HashCode.Combine(MapVoteState.Instance?.MapIdents.HashCombine(m => m.GetHashCode()));
    }
}

<style>
    MapVotePanel {
        position: absolute;
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;
        pointer-events: all;
        z-index: 500;

        .maps {
            display: flex;
            gap: 20px 20px;
            max-height: 750px;
            width: 1400px;
            flex-wrap: wrap;
            overflow: scroll;
            justify-content: center;
        }
    }
</style>