@namespace ParkourPainters.UI
@inherits RootPanel

<root>
    <GameTimer />
    <TextChat />
    <Powerups />
    <Inventory />
    <PlayerList />
    <TeamIndicator />
    <VoiceChatIndicators />
    <Instructions />
</root>

@code
{
    /// <summary>
    /// The player we are displaying the UI elements of.
    /// </summary>
    public static Entities.Player DisplayedPlayer
    {
        get
        {
            if (SpectatedPlayer.IsValid())
                return SpectatedPlayer;

            if (Game.LocalPawn is Entities.Player localPlayer)
                return localPlayer;

            return null;
        }
    }

    public static Entities.Player SpectatedPlayer { get; set; }

    public Hud()
    {
        Game.AssertClient();
        Game.RootPanel = this;
    }
}
